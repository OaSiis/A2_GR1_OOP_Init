{% extends 'base.html.twig' %}
{% block title %}
    {{ parent() }} - Create Pokemon
{% endblock %}
{% block content %}

    <h1>Create Pokemon</h1>

    <form id="loginForm" role="form" method="post">
        <div class="form-group">
            <label for="name">Name Pokemon: </label>
            <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name Pokemon">
            </div>

        </div>
        <div class="form-group">
            <label for="type">Status</label>
            <select name="type" id="type">
                <option value="{{ pokemon.type }}">Pokemon Feu</option>
                <option value="1">Pokemon Eau</option>
                <option value="2">Pokemon Plante</option>
            </select>
        </div>
        <button type="submit" class="btn btn-default">Create Pokemon</button>
    </form>

{% endblock %}